  <script src="api.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      // Auth-Container aktualisieren
      const authContainer = document.getElementById('auth-container');
      const currentUser = getCurrentUser();
      
      if (currentUser) {
        // Benutzer ist eingeloggt
        authContainer.innerHTML = `
          <span style="color: var(--secondary-color); margin-right: 10px;">Hallo, ${currentUser.name}</span>
          ${currentUser.isAdmin ? '<a href="admin.html" class="auth-button">Admin</a>' : ''}
          <button id="logout-button" class="auth-button">Abmelden</button>
        `;
        
        // Event-Listener fÃ¼r Logout-Button
        document.getElementById('logout-button').addEventListener('click', function() {
          logoutUser();
          window.location.reload();
        });
      }
    });
  </script>
